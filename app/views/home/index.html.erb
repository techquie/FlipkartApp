<div class="">
    <div class="header">
        <div class="header-sub-div" style="text-align: left">
            <%= image_tag("flipkart.png", :alt => "rss feed", :class=>"logo") %>
        </div>
        <div class="header-sub-div">
            <input type="text" id="search" name="search" placeholder="Search">
        </div>
        <div class="header-sub-div">
            <a href="/login">LOGIN</a>
        </div>
        <div class="header-sub-div">CART</div>
    </div>


    <p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Category</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.category_id %></td>
        <td><%= product.seller_id %></td>
        <td><%= link_to 'Show', home_path(product) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>