<div style="margin-top: -40px; width: 100%; height: 50px; line-height: 40px; color: red; text-align: left;">
  <%= link_to 'Back', '/sessions/sellersaccount', :class => 'submit-btn links' %>
</div>

<div style="width: 100%; height: 50px; line-height: 40px;">
  <div style="float: left; width: 40%; text-align: left; font-size:30px; font-weight: bold;"> Products </div>
  <div style="float: left; width: 30%; text-align: right;">
    <%= form_tag import_accounts_path, multipart: true, class: 'form-inline' do %>
      <div class="form-group" style="float: left; width: 70%; text-align: right;">
          <%= file_field_tag :file, class: '', :required=>true, :accept=>".csv", :style =>"width: 200px;" %>
      </div>
      <div class="form-group" style="float: left; width: 30%; text-align: right;">
        <%= submit_tag "Import CSV", :class=>".border-button" %>
      </div>
    <% end %>
  </div>
  <div style="float: left; width: 30%; text-align: right;"> 
    <%= link_to 'Download CSV', viewproduct_accounts_path(format: "csv"), :class => 'border-button' %>
  </div>
</div>

<table style="margin-bottom: 100px;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Category</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>â‚¹ <%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.category.name %></td>

        <td><%= link_to 'Update', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

