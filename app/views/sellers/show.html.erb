<div class="card">

  <div class="card-header">
    <strong>Detail View [Seller]</strong>
  </div>
  <div class="img-card">
    <%= image_tag("user.png", :alt => "rss feed", :class=>"cardlogo") %>
  </div>
  <hr>
  <div class="container">
    <h4><b>
      <strong>Name:</strong>
      <%= @seller.name %>
    </b></h4> 

    <p>
      <strong>Id:</strong>
      <%= @seller.id %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @seller.email %>
    </p>

    <p>
      <strong>Password:</strong>
  <%= @seller.password %>
    </p> 
  </div>
</div>

<div style="margin: auto; font-weight: bold; text-align: center; margin-top: 30px;">
<%= link_to 'Edit', edit_seller_path(@seller) %> |
<%= link_to 'Back', sellers_path %>
</div>
