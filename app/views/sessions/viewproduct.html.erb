<div style="margin-top: -40px; width: 100%; height: 50px; line-height: 40px; color: red; text-align: right;">
  <%= link_to 'Back', '/sessions/sellersaccount', :class => 'submit-btn links' %>
</div>
<h1>Products</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Category</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td>
        <%= category = @categories.find { |obj| obj.id == product.category_id }
                        category.name %>
        </td>

        <td><%= link_to 'Update', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

