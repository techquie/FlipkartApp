<div style="margin-top: -40px; width: 100%; height: 50px; line-height: 40px; color: red; text-align: left;">
  <%= link_to 'Back', '/sessions/sellersaccount', :class => 'submit-btn links' %>
</div>

<div class="card-nohover" style="width: 80%; margin-bottom: 100px; height: 450px; padding: 20px;">
  <div style="margin: auto; width: 50%; float: left;">

    <%= form_with(model: product) do |form| %>
    
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :price %>
        <%= form.text_field :price %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div class="field">
        <%= form.label :quantity %>
        <%= form.number_field :quantity %>
      </div>
      
      <div class="field" style="width: 100%;">
      <%= form.label :images %>
        <ul>
          <% product.images.each do |file| %>
            <li style="float: left;">
              <% if file.representable? %>
                <%= image_tag(file, :class=>"logo") %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="field" style="wdith: 100%;">
        
        <%= form.file_field :images, multiple: true %>
      </div>

      <div class="field">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :name,prompt: "Select Category" %>
      </div>
  <!-- >
      <div class="field">
        <%= form.label :seller_id %>
        <%= form.text_field :seller_id %>
      </div>
  -->

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>

  <div style="margin: auto; width: 50%; float: left;">

  <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% product.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  </div>
</div>